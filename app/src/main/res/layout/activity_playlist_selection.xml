<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.dcxp.tone.activities.PlaylistSelectionActivity">

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rv_selection"/>

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/fab_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:src="@drawable/right"
        android:tint="@android:color/white"
        fab:fab_colorNormal="@color/colorNormal"
        fab:fab_colorPressed="@color/colorPressed"
        fab:fab_colorRipple="@color/colorRipple"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/rv_selection"
        android:layout_alignEnd="@+id/rv_selection" />

</RelativeLayout>
